[http]
;	proxy = proxy.cht.com.tw:8080
[color]
	ui = auto
	status = auto
	diff = auto
	branch = auto
[core]
	editor = vim
[alias]
	bn = !sh -c 'git branch | sed -n \"/* /s///p\"'
	t = tfs
	tp = !sh -c 'git tfs pull -i `git bn`'
	tc = !sh -c 'git tfs checkintool -i `git bn`'
	ai = add --interactive
	co = checkout
	cow = checkout work
	com = checkout master
	c = commit
	cm = commit -m
	cma = commit -a -m
	ca = commit --amend
	caa = commit -a --amend -C HEAD
	st = stash
	sp = stash pop
	rb = rebase
	rbm = rebase master
	rbw = rebase work
	reh = reset HEAD
	me = merge
	mem = merge master
	mew = merge work
	r = reset
	d = diff
	dc = diff --cached
	s = status
	b = branch
	re = remote
	f = fetch
	pl = pull
	p = push
	l = log
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	cfg = config -l
[merge]
	tool = vimdiff
[push]
	default = matching
